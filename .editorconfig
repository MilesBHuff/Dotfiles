#!/hint/editorconfig
## Copyright (C) by Miles Bradley Huff from 2017-2023 per the LGPL3 (the Third Lesser GNU Public License)
root=true

## Defaults
## -----------------------------------------------------------------------------
[*]

## Tabulation
indent_style = space
indent_size  = 4

## Lines
end_of_line = lf
insert_final_newline = true
max_line_length = off

## Other
charset = utf-8

## Files that require 2-space indents
## -----------------------------------------------------------------------------
[{*.md, *.rst}]
indent_style = space
indent_size = 2

## Files that are for Windows
## -----------------------------------------------------------------------------
[{ProgramData/**}]
end_of_line = crlf
