### FUNCTIONS ------------------------------------------------------------------
## Base
function cdls {
	cd -L "$1"
	ls -bCFNvX --color --group-directories-first
}
function get_help {
	"$1" --help
}
function replace_string {
	sed -i "s/$1/$2/g" "$3"
}
