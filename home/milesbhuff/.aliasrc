## Install package(s)
function pkgin {
	case "$PKGMGR" in
		'pacman' )
			if [[ "$(which 'yaourt')" != *'not found'* ]]; then
				intellisu yaourt -a $*
			else
				intellisu pacman -S $*
			fi
		;;
		'apt' )
			intellisu apt-get install $*
		;;
		'yum' )
			intellisu yum install $*
		;;
		'zypper' )
			intellisu zypper -i $*
		;;
	esac
}
